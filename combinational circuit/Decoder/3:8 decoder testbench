module decoder3to8_tb;

reg  [2:0] a;
reg        en;
wire [7:0] y;

decoder3to8 dut (
    .a(a),
    .en(en),
    .y(y)
);

initial begin
    $monitor("Time=%0t | en=%b a=%b | y=%b", $time, en, a, y);

    en = 0; a = 3'b000;
    #10 en = 1;

    #10 a = 3'b000;
    #10 a = 3'b001;
    #10 a = 3'b010;
    #10 a = 3'b011;
    #10 a = 3'b100;
    #10 a = 3'b101;
    #10 a = 3'b110;
    #10 a = 3'b111;

    #10 en = 0;
    #10 $finish;
end

endmodule
