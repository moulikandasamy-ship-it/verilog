module binary_to_gray_tb;

reg  [3:0] bin;
wire [3:0] gray;

binary_to_gray dut (
    .bin(bin),
    .gray(gray)
);

initial begin
    $monitor("T=%0t | Binary=%b | Gray=%b", $time, bin, gray);

    bin = 4'b0000;
    #10 bin = 4'b0001;
    #10 bin = 4'b0010;
    #10 bin = 4'b0100;
    #10 bin = 4'b0111;
    #10 bin = 4'b1010;
    #10 $finish;
end

endmodule
